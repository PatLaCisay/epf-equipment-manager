{% extends './base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
<div class="container-switch">
    <span class="switch">
        <input type="checkbox" id="switcher" name="disponible&Reserve" checked>
        <label for="switcher"></label>
    </span>
</div>

{# Items disponibles Lorem ipsum #}
<div id="disponible" class="container-items">
    {% for i in range(0, 9) %}
        <div class="case">
        <a href="#">
            <div class="item">
                <div class="item-image">
                    <img src="https://picsum.photos/200/200" alt="image">
                </div>
                <div class="item-description">
                    <h2>
                        Disponible
                    </h2>
                    <p>(Lorem Ipsum, lorme ipsum ...)</p>
                </div>
            </div>
        </a>
        <div class="action">
            <div href="#" class="btn-Ajouter">Ajouter</div>
        </div>
    </div>
    {% endfor %}
</div>

{# Items reservé Loremipsum #}
<div id="reserve" class="container-items" style="display: none;">
    {% for i in range(0, 9) %}
        <div class="case">
        <a href="#">
            <div class="item">
                <div class="item-image">
                    <img src="https://picsum.photos/200/300" alt="image">
                </div>
                <div class="item-description">
                    <h2>
                        Reservé
                    </h2>
                    <p>(Lorem Ipsum, lorme ipsum ...)</p>
                </div>
            </div>
        </a>
    </div>
    {% endfor %}
</div>

{% endblock %}
