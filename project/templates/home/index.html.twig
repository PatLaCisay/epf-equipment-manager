{% extends './base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
<div class="container-switch">
    <span class="switch">
        <input type="checkbox" id="switcher" name="disponible&Reserve" checked>
        <label for="switcher"></label>
    </span>
</div>

{# Items disponibles #}
<div id="disponible" class="container-items">
    {% if available_items_list is empty %}
    <div class="alert">
        <p>Aucun item disponible</p>
    </div>
    {% endif %}

    {% for item in available_items_list %}
    <div class="case">
        <div class="item">
            <div class="item-image">
                <img src="{{ item.category.image }}" alt="image">
            </div>
            <div class="item-description">
                <h2>
                    <a href="/item/{{ item.id }}">
                        {{ item.name }}
                    </a>
                </h2>
                <p>({{ item.category.name }}, {{ item.state.value }})</p>
            </div>
        </div>
        <div class="action">
            <div href="#" class="btn-Emprunter">Emprunter</div>
            <div href="#" class="btn-Reserver">Réserver</div>
        </div>
    </div>
    {% endfor %}
</div>

{# Items reservé #}
<div id="reserve" class="container-items" style="display: none;">
    {% if available_items_list is empty %}
    <div class="alert">
        <p>Aucun item n'est reservé pour le moment</p>
    </div>
    {% endif %}

    {% for item in available_items_list %}
    <div class="case">
        <div class="item">
            <div class="item-image">
                <img src="{{ item.category.image }}" alt="image">
            </div>
            <div class="item-description">
                <h2>
                    <a href="/item/{{ item.id }}">
                        {{ item.name }}
                    </a>
                </h2>
                <p>({{ item.category.name }}, {{ item.state.value }})</p>
            </div>
        </div>
        <div class="action">
            <div href="#" class="btn-Reserver">Réserver</div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
