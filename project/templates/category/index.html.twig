{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<h1>Catégories</h1>
<div class="container-items">
    <div>
    {% for category in categories %}
        <div>
            <h2><a href="/category/{{ category.id }}">{{ category.name }}</a></h2>
            <p>{{ category.description }}</p>
        </div>
    {% endfor %}
    </div>
</div>

{% endblock %}
